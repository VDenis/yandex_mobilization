<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.artistDetail.ArtistDetailFragment"
    >
    <!-- ems limit the output string, after maxEms shows 3 dots-->
    <TextView
        android:id="@+id/detail_artist_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/artist_detail_vertical_margin"
        android:layout_marginTop="@dimen/artist_detail_vertical_margin"
        style="@style/CompactTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text"
        tools:text="genres genres genres genres genres genres genres genres"/>

    <TextView
        android:id="@+id/detail_artist_tracks_and_albums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/artist_detail_vertical_margin"
        style="@style/CompactTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text"
        tools:text="tracks and albums tracks and albums tracks and albums"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/artist_detail_vertical_margin"
        style="@style/CompactTextView"
        android:text="@string/artist_biography_article"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text"
        tools:text="biography biography biography biography biography biography"
        />

    <TextView
        android:id="@+id/artist_description"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textIsSelectable="true"
        tools:text="description description description description description description"/>
</LinearLayout>