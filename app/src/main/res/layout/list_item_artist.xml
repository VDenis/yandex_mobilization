<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="6"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="6"
        android:layout_columnSpan="6"
        tools:src="@mipmap/ic_launcher"
        android:contentDescription="@string/a11n_artist_photo"/>

    <Space
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowSpan="1"
        android:layout_gravity="fill"
        />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_row="1"
        android:layout_gravity="left|bottom|start"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Test Test Test Test Test "/>

    <TextView
        android:id="@+id/artist_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_row="2"
        android:layout_gravity="top|left|start"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Test Test Test Test Test "/>

    <TextView
        android:id="@+id/artist_tracks_and_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_row="4"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Test Test Test Test Test "
        android:layout_gravity="left|start"/>

</GridLayout>

