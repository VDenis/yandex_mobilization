<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="6"
            android:layout_margin="16dp"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="6"
        android:layout_columnSpan="6"
        tools:src="@mipmap/ic_launcher"
        android:contentDescription="@string/a11n_artist_photo"/>

    <android.support.v4.widget.Space
        android:layout_row="0"
        android:layout_height="10dp"/>
    <!--android:layout_margin="@dimen/text_margin"-->
    <!--android:textAppearance="?attr/textAppearanceListItem"-->
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_gravity="left|bottom|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Test Test Test Test Test "/>

    <!--android:layout_margin="@dimen/text_margin"-->
    <!--android:textAppearance="?attr/textAppearanceListItem"-->
    <!-- ems limit the output string, after maxEms shows 3 dots-->
    <TextView
        android:id="@+id/artist_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_gravity="top|left|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text"
        android:maxLines="1"
        android:maxEms="11"
        android:ellipsize="end"
        tools:text="Test Test Test Test Test "
        />

    <android.support.v4.widget.Space
        android:layout_row="3"
        android:layout_height="30dp"/>

    <!--android:layout_margin="@dimen/text_margin"-->
    <!--android:textAppearance="?attr/textAppearanceListItem"-->
    <!-- ems limit the output string, after maxEms shows 3 dots-->
    <TextView
        android:id="@+id/artist_tracks_and_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text"
        tools:text="Test Test Test Test Test Test"
        android:maxLines="1"
        android:maxEms="11"
        android:ellipsize="end"
        android:layout_gravity="left|start"/>

</GridLayout>

